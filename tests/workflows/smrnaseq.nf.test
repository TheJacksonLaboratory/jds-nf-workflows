nextflow_workflow {

    name "Test Workflow SMRNASEQ"
    script "workflows/smrnaseq.nf"
    workflow "SMRNASEQ"

    test("Full Workflow -- Mouse -- GRCm38") {
        tag "GRCm38"
        tag "primary"
        when {
            params {
                outdir = "tests/results"
                gen_org = "mouse"
                read_type = "SE"
                csv_input = 'https://raw.githubusercontent.com/TheJacksonLaboratory/jds-nf-test/refs/heads/main/smrnaseq/mouse/mm_smrna_input.csv'
                genome_build = "GRCm38"
                mirtrace_species = "mmu"
                pubdir = "tests/results"
                pipeline = 'smrnaseq'
            }
        }

        then {
            assert workflow.success
        }

    }

    test("Full Workflow -- Mouse -- GRCm39") {

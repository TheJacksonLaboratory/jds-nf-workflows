    test("Full Workflow -- Human") {
        tag "GRCh38"
        tag "primary"
        when {
            params {
                outdir = "tests/results"
                gen_org = "human"
                read_type = "SE"
                csv_input = 'https://raw.githubusercontent.com/TheJacksonLaboratory/jds-nf-test/refs/heads/main/smrnaseq/human/hg_smrna_input.csv'
                genome_build = "GRCh38"
